{
  "name": "abubakar-wdio-framework",
  "version": "1.1.1",
  "description": "Testing the Alchemy",
  "scripts": {
    "web": "npx wdio ./config/wdio.shared.conf.ts",
    "web:git": "npx wdio ./config/wdio.github.conf.ts",
    "web.staging": "cross-env NODE_ENV=staging ./config/wdio.shared.conf.ts",
    "web.tag": "cross-env NODE_ENV=$npm_config_env wdio ./config/wdio.shared.conf.ts --cucumberOpts.tagExpression",
    "update-package-json-dependencies": "npx ncu -u && npm i",
    "code:gherkin": "npx gherkin-lint -c .gherkin-lintrc.json tests/features/android",
    "report:generate": "npx allure generate --clean ./test-report/allure-result/ -o ./test-report/allure-report",
    "report:open": "npx allure open test-report/allure-report",
    "report": "npm run report:generate && npm run report:open",
    "del": "npx del test-report/*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/"
  },
  "keywords": [
    "WebdriverIO",
    "WebDriver",
    "native app",
    "hybrid",
    "android",
    "ios"
  ],
  "author": "Abubakar",
  "homepage": "https://github.com/",
  "dependencies": {
    "@wdio/cli": "^7.19.4",
    "@wdio/cucumber-framework": "^7.19.4",
    "@wdio/spec-reporter": "^7.19.1",
    "cucumber-html-report-generator": "^1.0.11"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^7.3.2",
    "@types/chai": "^4.3.0",
    "@types/fs-extra": "9.0.13",
    "@types/yargs": "17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "@wdio/allure-reporter": "^7.19.1",
    "@wdio/dot-reporter": "^7.19.1",
    "@wdio/local-runner": "^7.19.4",
    "@wdio/selenium-standalone-service": "^7.19.1",
    "@wdio/shared-store-service": "^7.19.4",
    "allure-commandline": "^2.17.2",
    "browserstack-local": "^1.4.9",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "chromedriver": "100.0.0",
    "cross-env": "^7.0.3",
    "cucumber-html-reporter": "^5.5.0",
    "cucumber-pretty": "^6.0.1",
    "del-cli": "^4.0.1",
    "dotenv": "^16.0.0",
    "eslint-plugin-wdio": "^7.19.4",
    "gherkin-lint": "^4.2.2",
    "jest": "^27.5.1",
    "js-yaml": "^4.1.0",
    "junit-viewer": "^4.4.0",
    "multiple-cucumber-html-reporter": "^1.19.0",
    "npm-check-updates": "12.5.8",
    "prettier": "^2.6.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3",
    "wdio-chromedriver-service": "^7.3.2",
    "wdio-cucumber-parallel-execution": "^3.6.15",
    "wdio-cucumberjs-json-reporter": "^4.4.1",
    "wdio-json-reporter": "^3.0.0",
    "wdio-slack-service": "^2.0.9",
    "wdio-timeline-reporter": "^5.1.4",
    "wdio-video-reporter": "^3.2.1",
    "wdio-wait-for": "^2.2.5",
    "yargs": "17.4.1"
  }
}
